doctype html
html(lang='uk')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title= title
    link(rel='icon' type='image/x-icon' href='/favicon.ico?v=1')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css' rel='stylesheet')
    style.
      body.theme-dark { background-color: #121212; color: #f1f3f5; }
      body.theme-dark .navbar { background-color: #1d1f22 !important; border-color: #343a40 !important; }
      body.theme-dark .nav-link, body.theme-dark .navbar-brand { color: #f1f3f5 !important; }
      body.theme-dark .card, body.theme-dark .list-group-item { background-color: #1f1f1f; color: #f1f3f5; border-color: #343a40; }
  body(class=`theme-${theme}`)
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.border-bottom
      .container.gap-3
        a.navbar-brand(href='/') Express App
        ul.navbar-nav.me-auto.mb-2.mb-lg-0.d-flex.flex-row.gap-3
          li.nav-item
            a.nav-link.fw-bold(href='/') Home
          li.nav-item
            a.nav-link.fw-bold(href='/users') Users
          li.nav-item
            a.nav-link.fw-bold(href='/articles') Articles
          li.nav-item
            a.nav-link.fw-bold(href='/files') Files
        form.d-flex.gap-2.ms-auto(action='/theme' method='post')
          input(type='hidden' name='redirectTo' value=currentPath || '/')
          select.form-select.form-select-sm(name='theme')
            option(value='light' selected=theme === 'light') Light
            option(value='dark' selected=theme === 'dark') Dark
          button.btn.btn-sm.btn-outline-secondary(type='submit') Theme
    .container.mt-4
      block content
